# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI 服务配置
ANTHROPIC_API_KEY=your_anthropic_api_key
# OpenAI API key - 用于生成 1536 维 embeddings (text-embedding-ada-002)
OPENAI_API_KEY=your_openai_api_key

# === AntiAnxiety Backend ===
# Semantic Scholar API key (可选 - 有免费额度)
# 获取地址: https://www.semanticscholar.org/product/api
# 用于验证健康建议的科学依据
SEMANTIC_SCHOLAR_API_KEY=

# === OAuth 配置 ===
# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# WeChat OAuth (微信开放平台 - 网站应用)
# 获取地址: https://open.weixin.qq.com
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# Reddit OAuth
# 获取地址: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# === 穿戴设备API ===
# Fitbit Web API
# 获取地址: https://dev.fitbit.com/apps
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=

# Oura Ring V2 API
# 获取地址: https://cloud.ouraring.com/oauth/applications
OURA_CLIENT_ID=
OURA_CLIENT_SECRET=

# === Assessment Engine ===
# Resend API key - 用于发送评估报告邮件
# 获取地址: https://resend.com
RESEND_API_KEY=

# Admin API key - 仅管理员代查接口使用 (Authorization: Bearer <key>)
ADMIN_API_KEY=

# 说明：
# 1. 复制此文件为 .env.local
# 2. 填入真实的密钥值
# 3. 不要将 .env.local 推送到 GitHub
# 4. SEMANTIC_SCHOLAR_API_KEY 是可选的，API 有免费额度
